<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UploadActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_color"
        app:title="Upload"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="center"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardMaxElevation="1dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/stockCard"
            android:visibility="gone"
            tools:visibility="visible"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Stock Details"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="textCapSentences"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/inputItemName"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Quantity:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="number"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/inputQuantity"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min Quantity:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="number"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/inputMinQuantity"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost of each:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="number"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/costOfEach"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    app:backgroundTint="#3F51B5"
                    android:id="@+id/btnUploadStock"
                    />





            </LinearLayout>










        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardMaxElevation="1dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/customerCard"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add customer details to send reminders"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="textCapSentences"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/customerName"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="phone"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/inputContactNo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="number"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/pendingAmount"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Date:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:hint="Choose Date"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/selectDueDate"
                    />






                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add customer"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    app:backgroundTint="#3F51B5"
                    android:id="@+id/btnUploadCustomer"
                    />





            </LinearLayout>










        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardMaxElevation="1dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/supplierCard"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add the material supplers"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Name:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="textCapSentences"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/inputSupplierName"
                    />






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="number"
                    android:hint="Enter"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/inputSupplierAmount"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Date:"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#3F51B5"
                    android:fontFamily="@font/regular"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/edit_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:hint="Choose Date"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:id="@+id/supplierDue"
                    />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Supplier"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    app:backgroundTint="#3F51B5"
                    android:id="@+id/btnUploadSupplier"
                    />






            </LinearLayout>










        </androidx.cardview.widget.CardView>









    </LinearLayout>


</RelativeLayout>